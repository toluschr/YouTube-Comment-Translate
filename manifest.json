{
  "name": "YouTube\u2122 Comment Translate",
  "version": "1.2.0",
  "description": "Automatically translate YouTube comments using the Google-Translate API",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_end",
      "js": ["inject.js"]
    }
  ],
  "permissions": ["storage"],
  "options_ui": { "page": "options.html" },
  "manifest_version": 3,
  "content_security_policy": {},
  "host_permissions": ["*://*.youtube.com/*"]
}
